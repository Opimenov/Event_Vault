<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.umb.EventVault.AddEvent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:weightSum="1">

            <TextView
                android:text="Add new event"
                android:layout_width="match_parent"
                android:id="@+id/textView"
                android:layout_height="30dp"
                android:textAlignment="center"
                android:textSize="24sp" />
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:weightSum="1"
            android:layout_weight="0.07">

            <Button
                android:layout_width="234dp"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:text="Set date"
                android:onClick="setDate"
                android:ems="10"
                android:gravity="center"
                android:textSize="24sp"
                android:id="@+id/eventDate"
                android:layout_weight="0.74"
                android:background="?android:attr/windowBackground" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:weightSum="1"
            android:layout_weight="0.07">

            <TextView
                android:text="Date"
                android:layout_width="303dp"
                android:id="@+id/textEventDate"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="30sp"
                android:layout_weight="1.36" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:weightSum="1"
            android:layout_weight="0.07">

            <Button
                android:layout_width="234dp"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:text="Set time"
                android:onClick="setTime"
                android:ems="10"
                android:gravity="center"
                android:textSize="24sp"
                android:id="@+id/eventTime"
                android:layout_weight="0.71"
                android:background="?android:attr/windowBackground" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:weightSum="1"
            android:layout_weight="0.07">

            <TextView
                android:text="Time"
                android:layout_width="303dp"
                android:id="@+id/textEventTime"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="30sp"
                android:layout_weight="1.36" />


        </LinearLayout>

        <Button
            android:text="Select Place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/get_places_button"
            android:onClick="showPlacesDialog"/>

        <TextView
            android:text=""
            android:layout_width="match_parent"
            android:id="@+id/textPlace"
            android:layout_height="30dp"
            android:gravity="center"
            android:textSize="30sp"
            android:layout_weight="0.27" />

            <Button
                android:text="Select Activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/get_activities_button"
                android:onClick="showActivitiesDialog"/>

            <TextView
                android:text=""
                android:layout_width="match_parent"
                android:id="@+id/textActivity"
                android:layout_height="30dp"
                android:gravity="center"
                android:textSize="30sp"
                android:layout_weight="0.27" />



        <Button
            android:text="Add event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/add_event_button"/>


    </LinearLayout>

</RelativeLayout>
